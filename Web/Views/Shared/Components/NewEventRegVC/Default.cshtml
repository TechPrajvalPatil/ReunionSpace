@model IEnumerable<EventRegistration>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="fw-bolder">New Registration</h3>
            <p class="card-description">
                Explore Events
            </p>
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th class="fw-bolder"> # </th>
                        <th class="fw-bolder"> Event Title</th>
                        <th class="fw-bolder">Member Name</th>
                        <th class="fw-bolder">Registration Date</th>
                        <th class="fw-bolder">Requests</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <td>@srno</td>
                            <td>@temp.Event.EventTitle</td>
                            <td>@temp.Member.FullName</td>
                            <td>@temp.RegistrationDate.ToString("MMMM dd, yyyy")</td>
                           
                            <td>
                                <a asp-action="AcceptRegistration" asp-controller="EventRegistration" asp-area="CompanyAdminArea" asp-route-id="@temp.EventRegistrationId" class="btn btn-success btn-rounded btn-fw"><i class="fa fa-check me-2"></i>Accepted</a>
                            </td>
                        </tr>
                        srno++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
