@model IEnumerable<MemberSkillVM>

<div class="container mt-5">
    <h3 class="text-center mb-4" style="font-weight: bold;">Your Skills</h3>

    <div class="card shadow-lg border-light">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="mb-4">
                    <!-- Proficiency Section -->
                    <p class="fw-bold"><strong>Proficiency:</strong> @Model.First().Proficiency</p>
                    <!-- No Of Years Section -->
                    <p class="fw-bold"><strong>No Of Years:</strong> @Model.First().NoOfYears</p>
                </div>

                <!-- Display Skills Section -->
                <h6 class="fw-bold text-primary mb-3">Skills:</h6>
                <ul class="list-group list-group-flush">
                    @foreach (var skill in Model)
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fa fa-check-circle text-success me-2"></i>
                            <span class="fs-5 fw-normal">@skill.SkillName</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-warning text-center mb-4">
                    <i class="fa fa-exclamation-triangle me-2"></i> You have not added any skills yet.
                </div>
                <div class="text-center">
                    <a asp-action="AddSkill" asp-controller="Profile" class="btn btn-primary btn-lg">
                        <i class="fa fa-plus-circle me-2"></i> Add Skills
                    </a>
                </div>
            }
        </div>
    </div>
</div>

