@model IEnumerable<MemberSkillVM>

<div class="container mt-5">
    <h3 class="text-center mb-4" style="font-weight: bold;"><i class="fa fa-gear me-2" style="color: #4A90E2;"></i>Skills</h3>

    <div class="card shadow-lg border-light">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="mb-4">
                    <p class="fw-bold"><strong>Proficiency:</strong> @Model.First().Proficiency</p>
                    <p class="fw-bold"><strong>No Of Years:</strong> @Model.First().NoOfYears</p>
                </div>

                <h6 class="fw-bold text-primary mb-3">Skills:</h6>
                <ul class="list-group list-group-flush">
                    @foreach (var temp in Model)
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fa fa-check-circle text-success me-2"></i>
                            <span class="fs-5 fw-normal">@temp.SkillName</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-warning text-center mb-4">
                    <i class="fa fa-exclamation-triangle me-2"></i> No Skills have been added by members yet.
                </div>
            }
        </div>
    </div>
</div>

