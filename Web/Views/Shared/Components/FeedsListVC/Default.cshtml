@model IEnumerable<Feeds>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="fw-bolder text-primary text-center mb-4" style="font-size: 2.5rem;">
                        <i class="fa fa-pencil me-2" style="color: #4A90E2;"></i> <span class="text-dark fw-bold">Feeds List</span>
                    </h3>
                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            You havent created a single feed yet !!
                        </div>
                    }
                    else
                    {
                        <table class="table table-striped table-hover text-center">
                            <thead>
                                <tr class="table-primary">
                                    <th class="fw-bold">#</th>
                                    <th class="fw-bold">Feed Title</th>
                                    <th class="fw-bold">Feed Date</th>
                                    <th class="fw-bold">Feed Type</th>
                                    <th class="fw-bold">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int srno = 1;
                                }
                                @foreach (var temp in Model)
                                {
                                    <tr>
                                        <td>@srno</td>
                                        <td>@temp.FeedsTitle</td>
                                        <td>@temp.FeedsDate.ToString("MMMM dd, yyyy")</td>
                                        <td>@temp.FeedType</td>
                                        <td>
                                            <a asp-action="Edit" asp-controller="Feeds" asp-area="MemberArea" asp-route-id="@temp.FeedsId" class="btn btn-primary btn-rounded btn-fw">
                                                <i class="fa fa-edit me-2"></i>Edit
                                            </a>
                                            <a asp-action="Delete" asp-controller="Feeds" asp-area="MemberArea" asp-route-id="@temp.FeedsId" class="btn btn-dark btn-rounded btn-fw" onclick="return confirm('Are you sure you want to delete this feed?');">
                                                <i class="fa fa-trash-o me-2"></i>Delete
                                            </a>
                                        </td>
                                    </tr>
                                    srno++;
                                }
                            </tbody>
                        </table>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
