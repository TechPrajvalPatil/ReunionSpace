@model Member

<ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Personal Information</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Resume</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab2" data-bs-toggle="pill" data-bs-target="#pills-profile2" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Education</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab3" data-bs-toggle="pill" data-bs-target="#pills-profile3" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Experience</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-profile-tab4" data-bs-toggle="pill" data-bs-target="#pills-profile4" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Skill</button>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="container my-5">
            <h3 class="text-center text-dark mb-4" style="font-weight: bold;"><i class="fa fa-info-circle me-2" style="color: #4A90E2;"></i>Member Info</h3>

            <div class="card shadow rounded" style="max-width: 900px; margin: 0 auto; border: 2px solid #007bff;">
                <div class="row no-gutters">
                    <div class="col-md-4 text-center" style="border-right: 2px solid #007bff;">
                        <img src="@(!string.IsNullOrEmpty(Model.ProfilePicture) ? Model.ProfilePicture : Url.Content("~/ProfilePhoto/Profile.jpg"))"
                             alt="@Model.FullName"
                             class="rounded-circle border border-white"
                             style="width: 150px; height: 150px; object-fit: cover; margin-top: 20px;">
                        <h4 class="text-primary mt-3">@Model.FullName</h4>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title fw-bold"><i class="fa fa-id-card me-2"></i>Profile Information</h5>
                            <div class="bg-light p-3 rounded shadow-sm" style="font-size: 1.1rem;">
                                <p class="mb-2">
                                    <i class="fa fa-envelope-square text-primary"></i> <strong>Email:</strong> @Model.EmailId
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-phone-square text-primary"></i> <strong>Mobile No:</strong> @Model.MobileNo
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-map-marker text-primary"></i> <strong>Address:</strong> @Model.Address
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-road text-primary"></i> <strong>City:</strong> @Model.City.CityName
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-calendar text-primary"></i> <strong>Date of Birth:</strong>
                                    @Model.DateOfBirth
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-venus-mars text-primary"></i> <strong>Gender:</strong> @Model.Gender.ToString()
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        @await Component.InvokeAsync("CVMemberVC", new { memberId = @Model.MemberId })
    </div>
    <div class="tab-pane fade" id="pills-profile2" role="tabpanel" aria-labelledby="pills-profile-tab2">
        @await Component.InvokeAsync("EduMemberVC", new { memberId = @Model.MemberId })
    </div>
    <div class="tab-pane fade" id="pills-profile3" role="tabpanel" aria-labelledby="pills-profile-tab3">
        @await Component.InvokeAsync("ExpMemberVC", new { memberId = @Model.MemberId })
    </div>
    <div class="tab-pane fade" id="pills-profile4" role="tabpanel" aria-labelledby="pills-profile-tab4">
        @await Component.InvokeAsync("SkillMemberVC", new { memberId = @Model.MemberId })
    </div>
</div>

<div class="accordion accordion-flush mt-4" id="accordionFlushExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                <i class="fa fa-users me-2 text-danger"></i><span class="fw-bold" style="font-size:20px">Connections</span>
            </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
                @await Component.InvokeAsync("MemberConnectionVC", new { memberId = @Model.MemberId })
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                <i class="fa fa-tasks me-2 text-danger"></i><span class="fw-bold" style="font-size:20px">Polls</span>
            </button>
        </h2>
        <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
                @await Component.InvokeAsync("MemberPollResponseVC", new { memberId = @Model.MemberId })
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                <i class="fa fa-calendar me-2 text-danger"></i><span class="fw-bold" style="font-size:20px">Events</span>
            </button>
        </h2>
        <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
                @await Component.InvokeAsync("MemberRegEventsVC", new { id = @Model.MemberId })
            </div>
        </div>
    </div>
</div>


<div class="text-center mt-3">
    @if (Model.IsActive)
    {
        <a class="btn btn-danger" asp-action="DeActive" asp-controller="MemberStatus" asp-route-memberId="@Model.MemberId">
            <i class="fa fa-toggle-off"></i> Deactivate
        </a>
    }
    else
    {
        <a class="btn btn-success" asp-action="Active" asp-controller="MemberStatus" asp-route-memberId="@Model.MemberId">
            <i class="fa fa-toggle-on"></i> Activate
        </a>
    }
</div>


<div class="text-center mt-3">
    <a class="btn btn-secondary" asp-action="Index" asp-controller="MemberStatus">
        <i class="fa fa-arrow-left"></i> Back to Member List
    </a>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
