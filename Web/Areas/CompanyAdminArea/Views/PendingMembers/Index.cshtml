@model IEnumerable<PendingMemberVM>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="fw-bolder"><i class="fa fa-exclamation me-2"></i>Pending List</h3>
            <p class="card-description">
                Request accepted or rejected for Member...
            </p>
            
            <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th class="fw-bolder"> # </th>
                        <th class="fw-bolder"> Member</th>
                        <th class="fw-bolder"> Mobile No </th>
                        <th class="fw-bolder"> CourseName </th>
                        <th class="fw-bolder">Attended Year</th>
                        <th class="fw-bolder">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <td>@srno</td>
                            <td>@temp.MemberName</td>
                            <td>@temp.MobileNo</td>
                            <td>@temp.CourseName</td>
                            <td>@temp.AttendedYear</td>
                            <td>
                                <a asp-action="Accepted" asp-route-id="@temp.MemberRequestId" class="btn btn-success btn-rounded btn-fw"><i class="fa fa-check me-2"></i>Accepted</a>
                                <a asp-action="Rejected" asp-route-id="@temp.MemberRequestId" class="btn btn-danger btn-rounded btn-fw"><i class="fa fa-ban me-2"></i>Rejected</a>
                            </td>
                        </tr>
                        srno++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
