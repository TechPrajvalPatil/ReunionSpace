@model IEnumerable<MemberPollResponseVM>
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="text-center mb-4">
                <h2 class="font-weight-bold text-danger">
                    <i class="fa fa-question-circle"></i> Poll Question:
                    <span class="text-dark">@Model.FirstOrDefault().PollQuestion</span>
                </h2>
            </div>
            @{
                int srno = 1;
            }
            @foreach (var temp in Model)
            {
                <div class="mb-4 p-3 border rounded shadow-sm bg-light">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge bg-primary">Response #@srno</span>
                        <p class="mb-0 fw-bold text-end">
                            Poll Response Date: <span class="fw-normal">@temp.PollResponseDate.ToString("MMMM dd, yyyy")</span>
                        </p>
                    </div>
                    <div class="fw-bold">Member Name: <span class="fw-normal">@temp.MemberName</span></div>
                    <div class="mt-2">
                        <p class="card-text fw-bold text-dark">Response:</p>
                        <div class="text-success fw-normal">@temp.Response</div>
                    </div>
                </div>
                srno++;
            }
            <div class="text-center mt-4">
                <a asp-action="Index" asp-controller="Polls" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Back to Events List
                </a>
            </div>
        </div>
    </div>
</div>
