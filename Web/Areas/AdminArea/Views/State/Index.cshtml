@model IEnumerable<State>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="fw-bolder"><span class="icon-map me-2"></span>State List</h3>
            <p class="card-description">
                Explore States
            </p>
            <a asp-action="Create" class="btn btn-outline-info btn-rounded btn-fw mb-4">Create New</a>
            <table class="table table-striped text-center">
                <thead>
                    <tr >
                        <th class="fw-bolder"> # </th>
                        <th class="fw-bolder"> State</th>
                        <th class="fw-bolder"> Country </th>
                        <th class="fw-bolder">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <td>@srno</td>
                            <td>@temp.StateName</td>
                            <td>@temp.Country.CountryName</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@temp.StateId" class="btn btn-primary btn-rounded btn-fw"><i class="fa fa-edit me-2"></i>Edit</a>
                                <a asp-action="Delete" asp-route-id="@temp.StateId" class="btn btn-danger btn-rounded btn-fw"><i class="fa fa-trash-o me-2"></i>Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
