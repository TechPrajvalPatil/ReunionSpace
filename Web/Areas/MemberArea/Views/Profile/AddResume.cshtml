@model MemberResume

<div class="container mt-4">
    <h3 class="text-center mb-4">Upload Your Resume</h3>

    <form method="post" enctype="multipart/form-data" asp-action="AddResume">
        <div class="mb-3">
            <label for="ResumeFile" class="form-label">Select Resume File:</label>
            <input type="file" asp-for="ResumeFile" class="form-control" accept=".pdf,.doc,.docx" required />
            <span asp-validation-for="ResumeFile" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="FileType" class="form-label">File Type:</label>
            <input type="text" asp-for="FileType" class="form-control" placeholder="e.g., PDF, DOCX" />
            <span asp-validation-for="FileType" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100 mt-3">Upload Resume</button>
        </div>
    </form>
    <div class="mt-2 text-center">
        <a asp-action="EditProfile" asp-controller="MemberHome">
            <i class="fa fa-arrow-left"></i> Back to Profile
        </a>
    </div>
</div>
