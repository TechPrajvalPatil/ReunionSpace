@model IEnumerable<ResponsePollVM>

<div class="container mt-2">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Participate in Our Poll!</h2>
        <p class="text-success">Your opinion matters. Please select one of the options below.</p>
    </div>

    <div class="card shadow">
        <div class="card-header text-center">
            <h3 class="fw-bolder mb-0">@Model.FirstOrDefault().PollQuestion</h3>
        </div>
        <div class="card-body p-5">
            <form asp-action="ResponsePoll" method="post">
                <input type="hidden" name="pollId" value="@ViewBag.pollId" />

                <div class="mb-3">
                    @foreach (var option in Model)
                    {
                        <div class="form-check p-2">
                            <input class="form-check-input" type="radio" name="pollOptionId" value="@option.PollOptionId" id="option-@option.PollOptionId" required>
                            <label class="form-check-label" for="option-@option.PollOptionId" style="font-weight: bold; font-size: 1.1rem;">
                                @option.Option
                            </label>
                        </div>
                    }
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Submit Response</button>
                    <a asp-action="Index" class="btn btn-dark btn-lg">Back To Polls</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border: none;
    }

    h2 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    h3 {
        color: #343a40;
    }

    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }

    .form-check {
        margin-bottom: 15px;
    }

        .form-check:hover {
            background-color: #e9ecef;
            border-radius: 5px;
        }
</style>
