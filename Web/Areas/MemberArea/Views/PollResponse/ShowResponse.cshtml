@model PollResponseVM

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Poll Question</h2>
        <p class="text-success">Your feedback is important to us. Please select one of the options below.</p>
    </div>

    <div class="card shadow">
        <div class="card-header text-center">
            <h3 class="fw-bolder mb-0">@Model.PollQuestion</h3>
        </div>
        <div class="card-body p-5">
            <form asp-action="UpdateResponse" method="post">
                <input type="hidden" name="pollId" value="@ViewBag.pollId" />

                <div class="mb-4">
                    @foreach (var option in Model.PollOptions)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="pollOptionId" value="@option.PollOptionId" id="option-@option.PollOptionId" @(option.IsSelected ? "checked" : "") required>
                            <label class="form-check-label" for="option-@option.PollOptionId" style="font-weight: bold;">
                                @option.Option
                            </label>
                        </div>
                    }
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-lg">Update Response</button>
                    <a asp-action="Index" class="btn btn-dark btn-lg">Back To Polls</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border: none;
    }

    h2 {
        font-size: 2rem;
    }

    h3 {
        color: #343a40;
    }

    .form-check-input:checked {
        background-color: #28a745;
        border-color: #28a745;
    }

    .form-check {
        margin-bottom: 15px;
    }

        .form-check:hover {
            background-color: #e9ecef;
            border-radius: 5px;
        }
</style>
