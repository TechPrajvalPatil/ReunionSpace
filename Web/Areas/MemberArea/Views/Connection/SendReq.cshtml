@model Infra.ViewModels.MemberReqVM

<h3 class="fw-bolder text-center mb-4" style="font-size: 2.5rem;color: #4A90E2;">
    <i class="fa fa-send me-2"></i> <span class="text-dark fw-bold">Send Request</span>
</h3>
<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <img src="@(!string.IsNullOrEmpty(Model.ProfilePicture) ? Model.ProfilePicture : Url.Content("~/ProfilePhoto/Profile.jpg"))"
                     class="rounded-circle shadow-lg"
                     style="width: 150px; height: 150px; object-fit: cover;"
                     alt="Profile Picture" />

               
                <h3 class="mt-3 fw-bold">@Model.MemberName</h3>
                <p class="mt-1 text-primary">@Model.Gender</p>
               

            </div>

            <form asp-action="SendReq" method="post">
                <input type="hidden" name="RequestToID" value="@Model.MemberId" />

                
                <div class="mb-4">
                    <label for="requestNote" class="form-label fw-bold">Request Note</label>
                    <textarea id="requestNote" name="RequestNote" class="form-control bg-light border-0 shadow-sm"
                              placeholder="Enter a request note" rows="5" style="resize: none;"></textarea>
                </div>

                
                <div class="text-center mb-2">
                    <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm"
                            style="background-color: #007bff; border-color: #007bff; transition: background-color 0.3s;">
                        Send Request
                    </button>
                </div>
            </form>

           
            <div class="text-center">
                <a asp-action="Index" asp-controller="Connection">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
