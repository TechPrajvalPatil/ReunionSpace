@model Member

<div class="container my-5">
    <h3 class="text-center text-dark mb-4"><i class="fa fa-exclamation-circle me-2" style="color: #4A90E2;"></i>Pending Request Details</h3>

    <div class="card shadow rounded" style="max-width: 900px; margin: 0 auto; border: 2px solid #007bff;">
        <div class="row no-gutters">
            <div class="col-md-4 text-center" style="border-right: 2px solid #007bff;">
                <img src="@(!string.IsNullOrEmpty(Model.ProfilePicture) ? Model.ProfilePicture : Url.Content("~/ProfilePhoto/Profile.jpg"))"
                     alt="@Model.FullName"
                     class="rounded-circle border border-white"
                     style="width: 150px; height: 150px; object-fit: cover; margin-top: 20px;">
                <h4 class="text-primary mt-3">@Model.FullName</h4>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title fw-bold"><i class="fa fa-id-card me-2"></i>Profile Information</h5>
                    <div class="bg-light p-3 rounded shadow-sm" style="font-size: 1.1rem;">
                        <p class="mb-2">
                            <i class="fa fa-envelope-square text-primary"></i> <strong>Email:</strong> @Model.EmailId
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-phone-square text-primary"></i> <strong>Mobile No:</strong> @Model.MobileNo
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-map-marker text-primary"></i> <strong>Address:</strong> @Model.Address
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-road text-primary"></i> <strong>City:</strong> @Model.City.CityName
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-calendar text-primary"></i> <strong>Date of Birth:</strong>
                            @Model.DateOfBirth
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-venus-mars text-primary"></i> <strong>Gender:</strong> @Model.Gender.ToString()
                        </p>
                    </div>
                    <div class="mt-4">
                        <a asp-action="AcceptConReq" asp-controller="Connection" asp-route-id="@Model.MemberId"
                           class="btn btn-success mx-2 btn-lg rounded-pill" style="padding: 10px 20px;">
                            <i class="fa fa-check-circle"></i> Accept Request
                        </a>
                        <a asp-action="RejectConReq" asp-controller="Connection" asp-route-id="@Model.MemberId"
                           class="btn btn-danger mx-2 btn-lg rounded-pill" style="padding: 10px 20px;">
                            <i class="fa fa-times-circle"></i> Reject Request
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" asp-controller="Connection" asp-route-id="@Model.MemberId"
           class="btn btn-dark btn-lg rounded-pill" style="padding: 10px 20px;">
            <i class="fa fa-arrow-left"></i> Back To Connections
        </a>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
