@model ChangePasswordVM

<div class="card p-4">
    <h2 class="mb-4">Change Password</h2>
    
    <h4 class="text-danger">@ViewBag.Message</h4>
    <form asp-action="ChangePassword" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-3">
            <label class="fw-bolder" for="Old Password">Old Password</label>
            <input asp-for="OldPassword" class="form-control" placeholder="Enter Old Password" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label class="fw-bolder">New Password</label>
            <input asp-for="NewPassword" class="form-control" placeholder="Enter New Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label class="fw-bolder">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter Confirm Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">ChangePassword</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <a asp-action="Index" asp-controller="MemberHome">Back To Home</a>
    </div>
</div>



