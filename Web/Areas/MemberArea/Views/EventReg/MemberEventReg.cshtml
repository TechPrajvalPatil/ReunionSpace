@model IEnumerable<MemberEventRegVM>

<div class="container mt-5">
    <h3 class="fw-bolder text-center mb-4" style="font-size: 2.5rem; color: #4A90E2;">
        <i class="fa fa-calendar me-2"></i> <span class="text-dark fw-bold">Events Registrations</span>
    </h3>
    <p class="text-center mb-4 text-success">Your Registered Events Approved Or Not Approved</p>

    <div class="row">
        @if(Model.Any())
        {
            @foreach (var temp in Model)
            {
                <div class="col-md-8 offset-md-2 mb-4">
                    <div class="card shadow-lg border-0 rounded-3 position-relative">
                        <div class="row g-0">

                            <div class="col-md-5 d-flex justify-content-center align-items-center" style="background-color: #f8f9fa;">
                                <img src="@temp.EventLogo" alt="Event Logo" class="img-fluid rounded-start" style="object-fit: contain; border-radius: 0.5rem 0 0 0.5rem;" />
                            </div>

                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title text-primary fw-bold" style="font-size: 1.5rem;">@temp.EventTitle</h5>
                                    <p class="mb-3" style="font-size: 0.95rem;">@temp.EventShortDesc</p>

                                    <div class="position-absolute top-0 end-0 p-3">
                                        <span class="badge @(temp.IsAccepted ? "bg-success" : "bg-danger")">
                                            @(temp.IsAccepted ? "Approved" : "Not Approved")
                                        </span>
                                    </div>

                                    <div class="mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-calendar me-2" style="color: #4A90E2"></i>
                                            <span class="fw-bold">Event Date:</span>
                                            <span class="ms-2 text-dark">@temp.EventDateTime.ToString("MMMM dd, yyyy")</span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-clock-o me-2" style="color: #4A90E2"></i>
                                            <span class="fw-bold">Event Time:</span>
                                            <span class="ms-2 text-dark">@temp.EventDateTime.ToString("t")</span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-tag me-2" style="color: #4A90E2"></i>
                                            <span class="fw-bold">Event Type:</span>
                                            <span class="ms-2 text-dark">@temp.EventType</span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-laptop me-2" style="color: #4A90E2"></i>
                                            <span class="fw-bold">Event Mode:</span>
                                            <span class="ms-2 text-dark">@temp.EventMode</span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-calendar me-2" style="color: #4A90E2"></i>
                                            <span class="fw-bold">Registration Date:</span>
                                            <span class="ms-2 text-dark">@temp.RegistrationDate.ToString("MMMM dd, yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {

            <div class="alert alert-warning text-center" role="alert">
                <i class="fa fa-exclamation-triangle me-2" style="font-size: 1.5rem;"></i>No Registered Events
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s;
        border-radius: 0.75rem;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        background-color: #ffffff; 
    }


</style>
